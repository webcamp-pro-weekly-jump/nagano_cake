<div>
	<h2>ショッピングカート</h2>
	　<%= button_to 'カートを空にする', empty_path_url, method: :delete, class: "btn btn-danger" %>

	<%= alert %>
	<%= notice %>


	<!--カートの中身-->
	 <table class="table-bordered">
	 	<thead>
	 		<tr>
	 			<th>商品名</th>
	 			<th>単価(税込)</th>
	 			<th>数量</th>
	 			<th>小計</th>
	 			<th colspan="3"></th>
	 		</tr>
	 	</thead>

	 	<tbody>
	 		<tr>
	 			<!--合計金額の算出に必要--->
	 			<% sum = 0 %>
	 			<% @cart_items.each do |cart_item| %>
	 			<td>
	 				<%= attachment_image_tag cart_item.product, :image, :fill, 20, 20, format: 'jpeg', class: "img-rounded pull-left",fallback: "no_image.jpg",size:"50x50" %>
	 				<%= cart_item.product.name %>
	 			</td>
	 			<td>
	 				<!--税込み価格の算出--->
	 				<% tax_price = cart_item.product.price * 1.08 %>
	 				<%= number_to_currency(tax_price, :unit => "", :precision => 0) %>
	 			</td>
	 			<td>
	 			    <%= form_for cart_item do |f| %>
	 			    <%= f.number_field :quantity, min: 1 , size: 2 %>
	 			    <%= f.submit '更新', class: 'btn btn-primary' %>
	 			    <% end %>
	 			</td>
	 			<td>
	 				<!--単価×数量--->
	 				<% sub_total = tax_price * cart_item.quantity %>
	 				<%= number_to_currency(sub_total, :unit =>"", :precision => 0) %>
	 			</td>
	 			<td>
	 				<!--商品一つずつ削除--->
	 			    <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
	 			</td>
	 			<!--合計金額の計算式--->
	 			<% sum+=sub_total %>
	 			<% end %>
	 		</tr>
	 	</tbody>
	 </table>

     <!--商品一覧画面へ--->
	 <%= link_to '買い物を続ける', products_path, class: "btn btn-primary" %>

	<table class="table-bordered">
		<tr>
			<td>合計金額</td>
			<td><%= number_to_currency(sum, :unit => "", :precision => 0) %></td>
		</tr>
	</table>

　　<!--注文情報入力--->
	<%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>
