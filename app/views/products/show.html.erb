<div class="col-xs-3">
 <h4>ジャンル検索</h4>
   <% @genres.each do |genre| %>
   <%= genre.name %>
  <% end %>

</div>

<div class="col-xs-9">
      <%= attachment_image_tag @product, :image, :fill, 40, 40, format: 'jpeg', class: "img-rounded pull-left",fallback: "no_image.jpg",size:"50x50" %>
      <h1>
      	<%= @product.name %>
      </h1>
      <%= @product.introduction %>
      <!--税込み価格の算出-->
      <% tax_price = @product.price * 1.08 %>
      <%= number_to_currency(tax_price, :unit => "¥", :precision => 0) %>(税込)

      <!--カートに入れる-->
      <%= form_for @cart_item do |f| %>
      <%= f.hidden_field :product_id, :value => @product.id %>
      <%= f.number_field :quantity, min: 1 %>
      <%= f.submit 'カートに入れる', method: :post, class: "btn btn-primary" %>
      <% end %>
</div>