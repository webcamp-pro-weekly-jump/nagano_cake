<div class="col-xs-3">
<!--ひと先ず登録されたジャンル名が表示されるように設定-->
 <h4>ジャンル検索</h4>
  <% @genres.each do |genre| %>
   <%= link_to products_path(genre_id: genre.id) do %>
   <%= genre.name %>
   <% end %>
  <% end %>

</div>

<!--商品一覧：ページネーションはまだ未設定-->
<div class="col-xs-9">
	<h1>商品一覧</h1>
     <% @products.each do |product| %>
      <%= link_to product_path(product.id) do %>
      <%= attachment_image_tag product, :image, :fill, 40, 40, format: 'jpeg', class: "img-rounded",fallback: "no_image.jpg",size:"50x50" %>
      <% end %>
      <%= product.name %>
      <% tax_price = product.price * 1.08 %>
      ¥<%= tax_price.to_s(:delimited) %>
    <% end %>
</div>