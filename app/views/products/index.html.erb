<div class="container">
 <div class="row">

  <div class="col-xs-2">
   <!--ジャンル検索の表示→各ジャンルへ移動-->
    <h4>
      <table class="table table-bordered">
       <thead>
         <tr>
          <th>ジャンル検索</th>
         </tr>
       </thead>
       <tbody>
         <tr>
          <td>
           <%= link_to '全ての商品', products_path %><br>
           <% @genres.each do |genre| %>
            <%= link_to products_path(genre_id: genre.id) do %>
            <%= genre.name %>
            <% end %><br>
           <% end %>
          </td>
         </tr>
       </tbody>
      </table>
    </h4>
  </div>


   <!--商品一覧-->
    <div class="col-xs-10">
	   <h1><%= @title %>一覧</h1>
      <p>(全<%= @counts %>件)</p><br>
       <div class="row">
         <% @products.each do |product| %>
          <div class="col-xs-3">
           <%= link_to product_path(product.id) do %>
           <%= attachment_image_tag product, :image, :fill, 40, 40, format: 'jpeg', class: "img-rounded",fallback: "no_image.jpg",size:"150x150" %>
           <% end %><br>
           <%= product.name %><br>
           <% tax_price = product.price * 1.08 %>
           <%= number_to_currency(tax_price, :unit => "¥", :precision => 0) %>
          </div>
         <% end %><br>
       </div>
       <%= paginate @products %>
    </div>
 </div>
</div>