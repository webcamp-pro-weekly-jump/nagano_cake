<h2>注文履歴一覧</h2>
<table class="table table-bordered">
	<thaed>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thaed>
	<tbody>
		<tr>
			<% @orders.each do |order| %>
			<td><%= order.created_at %></td>
			<td>
				<%= order.postal_code %>
				<%= order.address %>
				<%= order.name %>
			</td>
			<td><% @orders_items.each do |order| %>
				<%= order_item.product.name %>
				<% end %>
				</td>
			<td><% bill = order.all_price * order.postage %>
				<%= number_to_currency(bill, :unit =>"", :precision => 0) %>円
			</td>
			<td><%= order.order_status %></td>
			<td><%=link_to '表示する', class:"btn btn-primary" %></td>
			<% end %>
		</tr>
	</tbody>
</table>