<div class = "container show">
	<h2>注文履歴詳細</h2>
	<div class = "row">
		<div class = "col col-xs-6">
			<h3>注文情報</h3>
			<table>
  				<table border = "1" width = "500" height = "200" >
					<tbody>
						<tr>
							<th bgcolor = "#EEEEEE">注文日</th>
							<td>
								<%= simple_time(@order.created_at) %>
							</td>
						</tr>

						<tr>
							<th bgcolor = "#EEEEEE">配送先</th>
							<td>
								<%= @order.address %>
							</td>
						</tr>

						<tr>
							<th bgcolor = "#EEEEEE">支払方法</th>
							<td>
								<%= render 'orders/pay_method', order: @order %>
							</td>
						</tr>

						<tr>
							<th bgcolor = "#EEEEEE">ステータス</th>
							<td>
								<%= render 'orders/order_status', order: @order %>
							</td>
						</tr>
					</tbody>
  				</table>
			</table>

			<h3>注文内容</h3>
			<table>
  				<table border = "1" width = "700" height = "130" >
					<thead>
						<tr>
							<th width = "60%" bgcolor = "#EEEEEE">商品名</th>
							<th width = "15%" bgcolor = "#EEEEEE">単価（税込）</th>
							<th bgcolor = "#EEEEEE">個数</th>
							<th bgcolor = "#EEEEEE">小計</th>
						</tr>
					</thead>
					<tbody>
						<% sum = 0 %>
						<% @order.order_items.each do |order_item| %>
							<tr>
								<!-- 商品名の表示 -->
								<td>
									<%= order_item.product.name %>
								</td>
								<!-- ---------- -->

								<!-- 単価（税込み）の表示 -->
								<td>
									<% zeikomi = order_item.order_price * 1.08 %>
									<%= zeikomi %>円
								</td>
								<!-- ------------------ -->

								<!-- 個数の表示 -->
								<td>
									<%= order_item.quantity %>個
								</td>
								<!-- --------- -->

								<!-- 小計の表示 -->
								<td>
									<%= syoukei = zeikomi * order_item.quantity %>円
								</td>
								<% sum = sum + syoukei %>
							</tr>
						<% end %>
					</tbody>
  				</table>
			</table>
		</div>

		<div class = "col col-xs-6">
			<h3>請求情報</h3>
			<table>
   				<table border = "1" width = "300" height = "130" >
					<tbody>
						<tr>
							<th bgcolor = "#EEEEEE">商品合計</th>
							<td>
								<%= sum %>円
							</td>
						</tr>

						<tr>
							<th bgcolor = "#EEEEEE">配送料</th>
							<td>
								<%= @order.postage %>円
							</td>
						</tr>

						<tr>
							<th bgcolor = "#EEEEEE">ご請求額</th>
							<td>
								<%= sum + @order.postage %>円
							</td>
						</tr>
					</tbody>
  				</table>
			</table>
		</div>
	</div>
</div>
