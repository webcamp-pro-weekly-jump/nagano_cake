<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
   <p>
     名前（姓）<%= f.text_field :family_name, autocomplete: "family_name" %>
     (名）<%= f.text_field :first_name, autocomplete: "first_name" %>
   </p>
  </div>

 <div class="field">
  <p>
    フリガナ　（セイ）<%= f.text_field :family_name_kana %>
    （メイ）<%= f.text_field :first_name_kana %>
  </p>
  </div>

  <div class="field">
   <p>メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </p>
  </div>

  <div class="field">
   <p>郵便番号（ハイフンなし）
   　<%= f.number_field :postal_code, autocomplete: "postal_code" %>
   </p>
  </div> 
 
  <div class="field">
    <P>住所
     <%= f.text_field :address, autocomplete: "address" %>
    </P>
  </div>

  <div class="field">
    <p>電話番号（ハイフンなし）
    　<%= f.phone_field :tel, autocomplete: "tel" %>
  </p>
  </div>


  <div class="field">
   <p>パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
   </p> 
  </div>

  <div class="field">
    <p>パスワード（確認用）
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </p>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<div>
  <h2>既に登録済の方</h2>
  <p>
   <%= link_to "こちら", new_member_session_path %>からログインして下さい
  </p>
</div>



