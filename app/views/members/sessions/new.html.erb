<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
     <h4>会員の方はこちらからログイン</h4>
    </div>

<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
   <div class="col-xs-6 col-xs-offset-3">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",class: "form-control" %>
   </div>
  </div>

  <div class="field">
    <div class="col-xs-6 col-xs-offset-3">
    <p>パスワード</p>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",class: "form-control" %>
     </div>
  </div>

<div class="col-xs-6 col-xs-offset-3">
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= link_to '＝＞パスワードをわすれた方はこちら',  new_member_password_path, class: "pull-right" %>
</div>

<div class="col-xs-6 col-xs-offset-3">
  <div class="actions col-xs-offset-5">
    <%= f.submit "ログイン", class:"btn btn-primary col-xs-4" %>
  </div>
<% end %>
</div>
 <div class="col-xs-6 col-xs-offset-3">
 <h4>登録お済でない方</h4>
  <%= link_to "こちら", new_member_registration_path %> から新規登録を行ってください
 </div>
 </div>
 </div>
</div>