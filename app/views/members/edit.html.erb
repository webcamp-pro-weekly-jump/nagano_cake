<div class="container">
  <div class="row">

    <% if @member.errors.any? %>
     <div id="error_explanation">
      <h2><%= @member.errors.count %>errors prohibited this obj from being saved:</h2>
       <ul>
        <% @member.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
     </div>
    <% end %>

	<h1>登録情報編集</h1>

	 <div class="form-body">
      <%= form_for(@member) do |f| %>
	    <div class="form-group">
        <label class="col-xs-4">名前</label>
        <div class="col-xs-3">
        <%= f.text_field :family_name, placeholder: "姓", class: "form-control" %>
       </div>
       <div class="col-xs-3">
        <%= f.text_field :first_name, placeholder: "名", class: "form-control" %>
      </div>
        </div>

     <div class="form-group">
	   <label class="col-xs-4">フリガナ</label>
	    <div class="col-xs-3">
        <%= f.text_field :family_name_kana, placeholder: "セイ", class: "form-control" %>
      </div>
      <div class="col-xs-3">
        <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
      </div>
      </div>

    <div class="form-group">
	   <label class="col-xs-4">メールアドレス</label>
	    <div class="col-xs-6">
        <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control"  %>
        </div>
    </div>

    <div class="form-group">
	   <label class="col-xs-4">郵便番号(ハイフンなし)</label>
	    <div class="col-xs-6">
        <%= f.text_field :postal_code, placeholder: "郵便番号(ハイフンなし)", class: "form-control"  %>
        </div>
    </div>

     <div class="form-group">
	   <label class="col-xs-4">住所</label>
	    <div class="col-xs-6">
        <%= f.text_field :address, placeholder: "住所", class: "form-control"  %>
        </div>
    </div>

    <div class="form-group">
	   <label class="col-xs-4">電話番号(ハイフンなし)</label>
	    <div class="col-xs-6">
        <%= f.text_field :tel, placeholder: "電話番号(ハイフンなし)", class: "form-control"  %>
        </div>
    </div>
    </div>

   <div class="col-xs-12">
       <div class="actions col-xs-offset-4">
        <%= f.submit "編集内容を保存する", class: "btn btn-primary col-xs-4" %>
       </div>

       <div class="actions col-xs-offset-9">
        <%= link_to "退会する", quit_path, class: "btn btn-danger" %>
       </div>
	  <% end %>
  </div>
  </div>
</div>