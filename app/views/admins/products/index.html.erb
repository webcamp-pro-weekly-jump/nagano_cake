<!-- 商品一覧ページ -->

<h2>商品一覧</h2>

<div class="col-xs-12">
	<table>
		<thead>
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td>
				  <%= product.id %>
				</td>
				<td>
				  <%= product.name %>
			    </td>
			    <td>
				  <%= product.price %>
				</td>
				<td>
				  <%= Genre.find_by(id: product.genre_id).name %>
				</td>
				<!-- Genreと言う別のテーブルから情報を取得したい場合の書き方。ジャンルテーブルのidと商品テーブルのジャンルidが一致した物をfind_byで取得し、ジャンルテーブルのnameが欲しいのでこの書き方。 -->
				<td>
					<% if product.is_sale == true %>
					  <%= "販売中" %>
					<% else %>
					  <%= "販売停止中" %>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>