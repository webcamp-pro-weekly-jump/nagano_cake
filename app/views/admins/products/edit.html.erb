<h2>商品編集</h2>


<%= form_for(@product, url: edit_admins_product_path(@product.id)) do |f| %>
    <h4>商品画像</h4>
    <%= f.attachment_field :image %>

    <h4>商品名</h4>
    <%= f.text_field :name %>

    <h4>商品説明</h4>
	<%= f.text_area :introduction %>

	<h4>ジャンル</h4>
<!-- boolean -->
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>

	<h4>税抜価格</h4>
	<%= f.text_field :price %>

	<h4>販売ステータス</h4>
<!-- boolean -->
    <%= f.select :is_sale, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], include_blank: "--選択してください--" %>

	<%= f.submit '変更を保存' %>
<% end %>
