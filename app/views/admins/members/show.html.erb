<!-- 会員情報詳細ページ -->

<h2><%= @member.family_name + @member.first_name %>さんの会員詳細</h2>


<h4>顧客ID</h4>
<%= @member.id %>
	  <% if @member.is_valid == true %>
	    <%= "有効会員" %>
	  <% else %>
	    <%= "退会済" %>
	  <% end %>

<h4>氏名</h4>
<%= @member.family_name + @member.first_name %>

<h4>フリガナ</h4>
<%= @member.family_name_kana + @member.first_name_kana %>

<h4>郵便番号</h4>
<%= @member.postal_code %>

<h4>住所</h4>
<%= @member.address %>

<h4>電話番号</h4>
<%= @member.tel %>

<h4>メールアドレス</h4>
<%= @member.email %>

<%= link_to "編集する", edit_admins_member_path %>
<%= link_to "注文履歴一覧" %>