<!-- ジャンル追加、一覧ページ -->

<h2>ジャンル一覧</h2>

<div class="col-xs-4">
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <%= form_for(@genre, url: admins_genres_path) do |f| %>
        <tr>
          <td>
            <h4>ジャンル</h4>
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
          	<%= f.radio_button :is_valid, true %>
          	<%= f.label :is_valid, "有効" %>
          	<%= f.radio_button :is_valid, false %>
          	<%= f.label :is_valid, "無効" %>
          	<%= f.submit "追加" %>
          </td>
        </tr>
        <% end %>

          <div class="col-xs-8">
            <table>
              <thead>
                <tr>
                  <th>ジャンル</th>
                  <th>状態</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>

                <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= genre.name %>
                  </td>
                  <td>
                    <% if genre.is_valid == true %>
                      <%= "有効" %>
                    <% else %>
                      <%= "無効" %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "編集する", edit_admins_genre_path(genre.id) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>