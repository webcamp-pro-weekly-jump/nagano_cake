<!-- ジャンル追加、一覧ページ -->

<h2>ジャンル一覧</h2>

<div class="col-xs-4">
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <%= form_for(@genre, url: admins_genres_path) do |f| %>
        <tr>
          <td>
            <h4>ジャンル</h4>
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
          	<%= f.radio_button :is_valid, true %>
          	<%= f.label :is_valid, "有効" %>
          	<%= f.radio_button :is_valid, false %>
          	<%= f.label :is_valid, "無効" %>
          	<%= f.submit "追加" %>
          </td>
        </tr>
        <% end %>

          <div class="genre index container">
            <table class="table genre-index">
              <table border="1" align="left" width="500" height="130">
              <thead>
                <tr height= "30">
                  <th bgcolor = "#EEEEEE">ジャンル</th>
                  <th bgcolor = "#EEEEEE">状態</th>
                  <th bgcolor = "#EEEEEE"></th>
                </tr>
              </thead>
              <tbody>

                <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= genre.name %>
                  </td>
                  <td>
                    <% if genre.is_valid == true %>
                      <%= "有効" %>
                    <% else %>
                      <%= "無効" %>
                    <% end %>
                  </td>
                  <td align="center" valign="middle">
                    <%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-sm btn-primary" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            </table>
          </div>