<!-- 注文履歴一覧ページ -->
<h2>注文履歴一覧</h2>

<div class="col-xs-12">
	<table>
		<thead>
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td>
					<%= link_to order.created_at.strftime('%Y/%m/%d'), admins_order_path(order.id) %>
				</td>
				<td>
				　　 <%= Member.find_by(id: order.member_id).family_name %><%= Member.find_by(id: order.member_id).first_name %>
				</td>
				<td>
					<%= OrderItem.find_by(id: order.member_id).quantity %>
				</td>
				<td>
					<% if order.order_status == 0 %>
					<p>入金待ち</p>
					<% elsif order.order_status == 1 %>
					<p>入金確認</p>
					<% elsif order.order_status == 2 %>
					<p>製作中</p>
					<% elsif order.order_status == 3 %>
					<p>発送準備中</p>
					<% elsif order.order_status == 4 %>
					<p>発送済</p>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @orders %>
</div>
