<!-- 注文履歴一覧ページ -->
<h2>注文履歴一覧</h2>

<div class="col-xs-12">
	<table>
		<thead>
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td>
					<%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order.id) %>
				</td>
				<td>
				　　 <%= Member.find_by(id: order.member_id).family_name %><%= Member.find_by(id: order.member_id).first_name %>
				</td>
				<td>
					<%= OrderItem.find_by(id: order.member_id).quantity %>
				</td>
				<td>
					<%= order.order_status %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @orders %>
</div>
